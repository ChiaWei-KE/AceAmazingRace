@using AceAmazingRace.Models
@model AceAmazingRace.ViewModels.RaceEventViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var hours = new List<string>() {"01", "02", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12"};
    var minutes = new List<string>() {"00", "15", "30", "45"};
    var periods = new List<string> {RaceEvent.PeriodBeforeMidday, RaceEvent.PeriodAfterMidday };
}

<h3>New Event</h3>

@using (@Html.BeginForm("CreateNew", "RaceEvents")) {

    <div class="form-group">
        @Html.LabelFor(e => e.RaceEvent.Name)
        @Html.TextBoxFor(e => e.RaceEvent.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.RaceEvent.Description)
        @Html.TextBoxFor(e => e.RaceEvent.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.RaceEvent.Date)
        @Html.TextBoxFor(e => e.RaceEvent.Date, "{0:dd MM yyyy}", new { @class = "form-control datepicker"})
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Hours)
        @Html.DropDownListFor(e => e.Hours, 
            new SelectList(@hours), 
            "Please select Hours",
            new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Minutes)
        @Html.DropDownListFor(e => e.Minutes,
            new SelectList(@minutes),
            "Please select Minutes",
            new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Periods)
        @Html.DropDownListFor(e => e.Periods,
                           new SelectList(@periods),
                           "Please select periods",
                           new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.RaceEvent.Location)
        @Html.TextBoxFor(e => e.RaceEvent.Location, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-primary" href="@Url.Action("Index","RaceEvents")">Cancel</a>
}

