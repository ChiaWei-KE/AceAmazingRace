@model AceAmazingRace.Models.RaceEvent
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>New Event</h3>

@using (@Html.BeginForm("CreateNew", "RaceEvents")) {

    <div class="form-group">
        @Html.LabelFor(e => e.Name)
        @Html.TextBoxFor(e => e.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Description)
        @Html.TextBoxFor(e => e.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Date)
        @Html.TextBoxFor(e => e.Date, "{0:dd MM yyyy}", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Time)
        @Html.TextBoxFor(e => e.Time, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Location)
        @Html.TextBoxFor(e => e.Location, new { @class = "form-control" })
    </div>
