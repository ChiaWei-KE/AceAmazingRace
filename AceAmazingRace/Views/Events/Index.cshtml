@model List<AceAmazingRace.Models.Event>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upcoming Events</h2>

@if (@Model.Count == 0)
{
    <span>No events are found.</span>
}
else {
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Date & Time</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model) {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.DateAndTime()</td>
                    <td>@item.Location.Name</td>
                </tr>
            }
        </tbody>
    </table>
}


